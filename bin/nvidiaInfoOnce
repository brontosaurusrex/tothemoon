#!/bin/bash

# nvidiaInfoOnce

h=$(hostname)
u=$(uptime -p)

# ZEC specific
#read -r _ _ _ _ sol _<<< $(lynx -dump http://127.0.0.1:42000 | grep Total) # < miner specific
#echo "$h, $sol Sol/s, $u"

# generic
echo "$h, $u"

nvidia-smi --query-gpu=index,power.draw,clocks.sm,fan.speed,utilization.gpu,temperature.gpu --format=csv
