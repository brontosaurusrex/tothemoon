#!/bin/bash

# toTheMoonWrap

# usage: run without parameters to run once, 
# run with "rep" to repeat every "timeToSleep" seconds.

timeToSleep="100"

bmiltime() {
    echo "$(date +%H%M%^b%d%y)"
    }

bmiltime

repeat() {
    while :
    do
        ssh rudi@rok "~/bin/toTheMoon"
        echo 
    sleep "$timeToSleep"
    done
}

once() {
    ssh rudi@rok "~/bin/toTheMoon"
}

case "$1" in
  "")   once ;;
  rep)  repeat ;;
esac
